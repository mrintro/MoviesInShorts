<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoviesInShorts" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="headingMainViewPager">
        <item name="android:paddingLeft">4sp</item>
        <item name="android:fontFamily">@font/tt_commons_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextDefault</item>
    </style>

    <style name="headingDetail">
        <item name="android:paddingLeft">4sp</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/colorTextDefault</item>
    </style>

    <style name="search_heading">
        <item name="android:paddingLeft">4sp</item>
        <item name="android:fontFamily">@font/tt_commons_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextDefault</item>
    </style>

    <style name="other_data">
        <item name="android:paddingLeft">4sp</item>
        <item name="android:fontFamily">@font/tt_commons_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextDefault</item>
    </style>

    <style name="other_detail_data">
        <item name="android:paddingLeft">4sp</item>
        <item name="android:fontFamily">@font/gafata_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorTextDefault</item>
    </style>

    <style name="buttonActiveTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="fontWeight">20</item>
        <item name="android:fontFamily">@font/tt_commons_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="buttonInactiveTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="fontWeight">15</item>
        <item name="font">@font/tt_commons_regular</item>
        <item name="android:textColor">@color/colorTextHintDefault</item>
    </style>

    <style name="buttonStyle" parent="@android:style/Widget.Button.Small">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="pushpa_the_">
        <item name="android:textSize">
            26sp
        </item>
        <item name="font">@font/tt_commons_black</item>
        <item name="android:letterSpacing">
            0.02
        </item>
        <item name="android:textColor">
            #000000
        </item>
    </style>

    <style name="imdb_text_style">
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textColor">
            #FFFFFF
        </item>
    </style>

    <style name="active_button_style">
        <item name="font">@font/tt_commons_regular</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="inactive_button_style">
        <item name="font">@font/tt_commons_regular</item>
        <item name="android:textColor">@color/colorTextHintDefault</item>
    </style>

    <style name="imdb_container_style">
        <item name="android:background">#7E9945</item>
    </style>


</resources>